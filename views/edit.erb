<section>
  <form method="post" action="/memo/<%= @id %>/edit">
    <div>
      <label>タイトル</label>
      <input type= "text" name="title" value="<%= h(@title) %>">
    </div>
    <div>
      <label>内容</label>
      <textarea name="text"><%= h(@text) %></textarea>
    </div>
    <div>
      <input type="hidden" name="_method" value="PATCH">
      <input type= "submit" value="変更">
    </div>
  </form>
</section>
